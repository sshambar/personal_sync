# .bash_profile

# Other login files?
[ -r ~/.bash_login ] && . ~/.bash_login || \
    { [ -r ~/.profile ] && . ~/.profile; }

# Get the aliases and functions
[ -r ~/.bashrc ] && . ~/.bashrc

